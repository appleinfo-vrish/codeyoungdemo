        // Main page switcher
        function showPage(page, event) {
            document.querySelectorAll('.menu div').forEach(el => el.classList.remove('active'));
            if (event && event.currentTarget) event.currentTarget.classList.add('active');
            if (page === 'home') renderHome();
            else if (page === 'jobs') renderJobs();
            else if (page === 'network') renderNetwork();
            else if (page === 'messaging') renderMessaging();
            else if (page === 'notifications') renderNotifications();
            else if (page === 'me') renderMe();
        }

        // Initial load
        window.onload = function() {
            if (document.getElementById('main-app').style.display !== 'none') {
                showPage('home');
            }
        };
    </script>

</body></html>
