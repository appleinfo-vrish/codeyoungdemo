        // Open chat (mockup)
        function openChat(name) {
            let messages = {
                "Mike Johnson": [
                    { from: "Mike Johnson", text: "Hi! Are you attending the AI conference next week?" },
                    { from: "Vrishin", text: "Yes, looking forward to it!" }
                ],
                "Jane Smith": [
                    { from: "Jane Smith", text: "Congrats on your new job!" },
                    { from: "Vrishin", text: "Thank you Jane!" }
                ],
                "Priya Agarwal": [
                    { from: "Priya Agarwal", text: "Check out my new article on UI/UX trends." },
                    { from: "Vrishin", text: "Will do, thanks!" }
                ]
            };
            let html = `<div style="font-weight:bold;margin-bottom:8px;">${name}</div>`;
            (messages[name] || []).forEach(msg => {
                html += `<div style="margin-bottom:6px;"><strong>${msg.from}:</strong> ${msg.text}</div>`;
            });
            html += `
                <input type="text" placeholder="Type a message..." style="width:70%;padding:6px;border-radius:4px;border:1px solid #ccc;">
                <button style="padding:6px 12px;background:#0a66c2;color:#fff;border:none;border-radius:4px;cursor:pointer;">Send</button>
            `;
            document.getElementById('chat-window').innerHTML = html;
        }

