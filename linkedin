        // Render home page
        function renderHome() {
            let html = `
                <div class="post-box">
                    <div class="top">
                        <img src="https://cdn.vectorstock.com/i/500p/89/50/generic-person-gray-photo-placeholder-man-vector-24848950.jpg" alt="Profile">
                        <span style="font-weight:bold;">Start a post</span>
                    </div>
                    <textarea rows="3" placeholder="What do you want to talk about?" id="new-post-text"></textarea>
                    <div class="attachments">
                        <label>
                            <span>üì∑</span> <input type="file" id="new-post-photo" accept="image/*">
                        </label>
                        <label>
                            <span>üé•</span> <input type="file" id="new-post-video" accept="video/*">
                        </label>
                        <label>
                            <span>üìÖ</span> <input type="date" id="new-post-event">
                        </label>
                    </div>
                    <div class="actions">
                        <div onclick="createPost()">Post</div>
                        <div onclick="alert('Write article coming soon!')"><span>‚úçÔ∏è</span>Write article</div>
                    </div>
                </div>
            `;
            posts.forEach((post, idx) => {
                html += `
                <div class="post" data-idx="${idx}">
                    <div class="author">
                        <img src="${post.author.img}" alt="Author">
                        <div class="author-details">
                            <span>${post.author.name}</span>
                            <div class="headline">${post.author.headline}</div>
                        </div>
                    </div>
                    <div class="meta">${post.meta}</div>
                    <div class="content">${post.content}</div>
                    ${post.media ? `<div class="media"><img src="${post.media}" alt="Post media"></div>` : ""}
                    <div class="actions">
                        <div onclick="likePost(this, ${idx})"><span>üëç</span>Like <span class="like-count">${post.likes}</span></div>
                        <div onclick="toggleComments(this, ${idx})"><span>üí¨</span>Comment</div>
                        <div onclick="sharePost(this)"><span>üîó</span>Share</div>
                        <div onclick="sendPost(this)"><span>‚úâÔ∏è</span>Send</div>
                    </div>
                    <div class="comments-section" style="display:none;">
                        ${post.comments.map(c => `<div class="comment"><strong>${c.user}:</strong> ${c.text}</div>`).join("")}
                        <input type="text" placeholder="Write a comment...">
                        <button onclick="addComment(this, ${idx})">Post</button>
                    </div>
                </div>
                `;
            });
            document.getElementById('main-content').innerHTML = html;
        }

        // Create post (mockup)
        function createPost() {
            const text = document.getElementById('new-post-text').value.trim();
            if (!text) return alert("Post cannot be empty!");
            posts.unshift({
                author: {
                    name: "Vrishin",
                    img: "https://cdn.vectorstock.com/i/500p/89/50/generic-person-gray-photo-placeholder-man-vector-24848950.jpg",
                    headline: "Student | Tech Enthusiast"
                },
                meta: "Now ‚Ä¢ üåé",
                content: text,
                media: "",
                likes: 0,
                comments: []
            });
            renderHome();
        }

        // Like post
        function likePost(el, idx) {
            posts[idx].likes++;
            el.querySelector('.like-count').textContent = posts[idx].likes;
            el.style.color = '#0a66c2';
        }

        // Toggle comments
        function toggleComments(el, idx) {
            const postDiv = el.closest('.post');
            const commentsSection = postDiv.querySelector('.comments-section');
            commentsSection.style.display = commentsSection.style.display === 'none' ? '' : 'none';
        }

        // Add comment
        function addComment(btn, idx) {
            const input = btn.previousElementSibling;
            const text = input.value.trim();
            if (!text) return;
            posts[idx].comments.push({ user: "Vrishin", text });
            renderHome();
            // Reopen comments section
            setTimeout(() => {
                document.querySelector(`.post[data-idx="${idx}"] .comments-section`).style.display = '';
            }, 10);
        }

        // Share/Send
        function sharePost(el) { alert('Share functionality coming soon!'); }
        function sendPost(el) { alert('Send functionality coming soon!'); }

